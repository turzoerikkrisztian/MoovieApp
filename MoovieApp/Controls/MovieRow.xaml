<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MoovieApp.Models"
             xmlns:controls="clr-namespace:MoovieApp.Controls"
             x:Class="MoovieApp.Controls.MovieRow"
             x:Name="this">
    
    <VerticalStackLayout BackgroundColor="Red"
                         BindingContext="{x:Reference this}">
        <Label Text="{Binding Heading}"                
               HorizontalOptions="Start"
               FontSize="20"
               TextColor="White"
               HorizontalTextAlignment="Start"
               FontAttributes="Bold"
               Margin="10, 0, 0, 10"/>

        <CollectionView ItemsSource="{Binding Movies}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal"
                                   ItemSpacing="5">
                </LinearItemsLayout>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MovieModel">
                    <Border StrokeShape="RoundRectangle 30"
                            Stroke="Red"
                            StrokeThickness="1">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source=
                            {RelativeSource AncestorType=
                            {x:Type controls:MovieRow}}, Path=MovieDetailsCommand}"
                                                  CommandParameter="{Binding}"/>
                        </Border.GestureRecognizers>
                        <Image
                            
                            Aspect="AspectFit"
                            HeightRequest="200"
                            WidthRequest="130"
                            IsVisible="{Binding Source=
                            {RelativeSource AncestorType=
                            {x:Type controls:MovieRow}}}">
                            <Image.Source>
                                <UriImageSource Uri="{Binding ThumbnailSmall}"/>
                            </Image.Source>
                        </Image>
                        
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
